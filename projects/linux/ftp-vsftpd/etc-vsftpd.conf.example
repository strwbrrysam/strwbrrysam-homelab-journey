# /etc/vsftpd.conf

listen=YES
listen_ipv6=NO

anonymous_enable=NO
local_enable=YES
write_enable=YES
use_localtime=YES

local_root=/zpool/vault

chroot_local_user=YES
allow_writeable_chroot=YES

local_umask=002
file_open_mode=0666
chmod_enable=YES

secure_chroot_dir=/var/run/vsftpd/empty

pasv_enable=YES
pasv_min_port=30000
pasv_max_port=31000
port_enable=YES

xferlog_enable=YES
dual_log_enable=YES
vsftpd_log_file=/var/log/vsftpd.log

pam_service_name=vsftpd

ssl_enable=NO

idle_session_timeout=600
data_connection_timeout=600
